<!DOCTYPE html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet">
    <link href="~/css/auth.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script>
        @if (TempData["SuccessMessage"] != null) { <text>toastr.success('@TempData["SuccessMessage"]');</text> }
        @if (TempData["ErrorMessage"] != null) { <text>toastr.error('@TempData["ErrorMessage"]');</text> }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>