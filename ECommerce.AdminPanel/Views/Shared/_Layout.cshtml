<!DOCTYPE html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Admin</title>

    <script>
        (function() {
            var theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', theme);
        })();
    </script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        // Session'dan kullanıcı bilgilerini alıyoruz
        var userName = Context.Session.GetString("UserName") ?? "Kullanıcı";
        var companyId = Context.Session.GetString("CompanyId");
        var initials = string.Join("", userName.Split(' ').Take(2).Select(x => x.FirstOrDefault())).ToUpper();
        
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-store"></i>
            </div>
            <span class="sidebar-brand">E-Commerce</span>
        </div>

        <nav class="sidebar-nav">
            <div class="nav-section-title">Ana Menü</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            </ul>

            <div class="nav-section-title">E-Ticaret</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Product" ? "active" : "")" asp-controller="Product" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <span>Ürünler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Category" ? "active" : "")" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-layer-group"></i>
                        <span>Kategoriler</span>
                    </a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link @(currentController == "Brand" ? "active" : "")" asp-controller="Brand" asp-action="Index">
                        <i class="fas fa-layer-group"></i>
                        <span>Markalar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Order" ? "active" : "")" asp-controller="Order" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Siparişler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Customer" ? "active" : "")" asp-controller="Customer" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <span>Müşteriler</span>
                    </a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link @(currentController == "Review" ? "active" : "")" asp-controller="Review" asp-action="Index">
                        <i class="fas fa-layer-group"></i>
                        <span>Yorumlar</span>
                    </a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link @(currentController == "Cargo" ? "active" : "")" asp-controller="Cargo" asp-action="Index">
                        <i class="fas fa-layer-group"></i>
                        <span>Kargo İşlemleri</span>
                    </a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link @(currentController == "Banner" ? "active" : "")" asp-controller="Banner" asp-action="Index">
                        <i class="fas fa-layer-group"></i>
                        <span>Reklam Yönetimi</span>
                    </a>
                </li>
            </ul>

            <div class="nav-section-title">Ayarlar</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Company" ? "active" : "")" asp-controller="Company" asp-action="Index">
                        <i class="fas fa-building"></i>
                        <span>Şirketim</span>
                    </a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link @(currentController == "User" ? "active" : "")" asp-controller="User" asp-action="Index">
                        <i class="fas fa-building"></i>
                        <span>Kullanıcı&Rol Yönetimi</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Çıkış Yap</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">@initials</div>
                <div class="user-details">
                    <div class="user-name">@userName</div>
                    <div class="user-role">@(string.IsNullOrEmpty(companyId) ? "Sistem Admin" : "Şirket Yöneticisi")</div>
                </div>
            </div>
        </div>
    </aside>

    <main class="main-content">
        <header class="main-header">
            <div class="header-left">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <div class="header-right">
                <button class="header-btn" id="themeToggle">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </header>

        <div class="page-content container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    <script>
        // Toastr Bildirimleri
        $(document).ready(function() {
            @if (TempData["SuccessMessage"] != null) { <text>toastr.success('@TempData["SuccessMessage"]');</text> }
            @if (TempData["ErrorMessage"] != null) { <text>toastr.error('@TempData["ErrorMessage"]');</text> }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>