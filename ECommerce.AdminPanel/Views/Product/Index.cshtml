@model ECommerce.AdminPanel.Models.Products.ProductListViewModel
@{
    ViewData["Title"] = "Ürünler";
    var products = Model.Products;
    var productList = products.Items ?? new List<ECommerce.Application.DTOs.Product.ProductDto>();
}
<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Ürünler</li>
            </ol>
        </nav>
        <h1 class="page-title">Ürün Yönetimi</h1>
        <p class="page-subtitle mb-0">Tüm ürünlerinizi buradan yönetebilirsiniz.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
            <i class="fas fa-plus me-2"></i>Yeni Ürün
        </a>
    </div>
</div>

<div class="card shadow-sm border-0" style="border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4">Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Şirket</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in productList)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-primary bg-opacity-10 rounded p-2 text-primary">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <span class="fw-bold">@product.Name</span>
                                </div>
                            </td>
                            <td><span class="badge bg-secondary bg-opacity-10 text-secondary">@product.CategoryName</span></td>
                             <td><span class="badge bg-secondary bg-opacity-10 text-secondary">@product.BrandName</span></td>
                             <td><span class="badge bg-secondary bg-opacity-10 text-secondary">@product.CompanyName</span></td>
                            <td><span class="text-success fw-bold">@product.Price.ToString("N2") ₺</span></td>
                            <td>
                                @if (product.Stock <= 5) { <span class="text-danger fw-bold">@product.Stock (Kritik)</span> }
                                else { <span>@product.Stock</span> }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Emin misiniz?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>