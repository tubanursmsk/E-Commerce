@model ECommerce.AdminPanel.Models.Products.CreateProductViewModel
@{
    ViewData["Title"] = "Yeni Ürün";
    var allProducts = ViewBag.allProducts as List<ECommerce.Application.DTOs.Product.ProductDto> ?? new();
    var allCategories = ViewBag.AllCategories as List<ECommerce.Application.DTOs.Category.CategoryDto> ?? new();
}

<div class="page-header mb-4">
    <h1 class="page-title">Yeni Ürün Ekle</h1>
    <p class="text-muted">Mağazanıza yeni bir ürün tanımlayın.</p>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-4" style="border-radius: 15px;">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Ürün Adı</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Örn: Kablosuz Mouse">
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Kategori Seçin</label>
                    <select asp-for="CategoryId" class="form-select form-select-lg">
                        <option value="">-- Kategori Seçiniz --</option>
                        @foreach(var cat in allCategories) {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 p-4 mb-4" style="border-radius: 15px;">
                <h5 class="fw-bold mb-3">Fiyat & Stok</h5>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label small text-muted">Birim Fiyat</label>
                    <div class="input-group">
                        <input asp-for="Price" type="number" step="0.01" class="form-control">
                        <span class="input-group-text">₺</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Stock" class="form-label small text-muted">Stok Miktarı</label>
                    <input asp-for="Stock" type="number" class="form-control">
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
                    <i class="fas fa-save me-2"></i>Ürünü Kaydet
                </button>
                <a asp-action="Index" class="btn btn-light btn-lg text-muted">İptal</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}