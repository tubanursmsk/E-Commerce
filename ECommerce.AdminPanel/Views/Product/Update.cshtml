@model ECommerce.AdminPanel.Models.Products.UpdateProductViewModel
@{
    ViewData["Title"] = "Ürün Düzenle";
    var allCategories = ViewBag.AllCategories as List<ECommerce.Application.DTOs.Category.CategoryDto> ?? new();
    var allBrands = ViewBag.AllBrands as List<ECommerce.Application.DTOs.Brand.BrandDto> ?? new();
}

<div class="page-header mb-4">
    <h1 class="page-title">Ürünü Düzenle</h1>
    <p class="text-muted"><strong>@Model.Name</strong> ürününün bilgilerini güncelleyin.</p>
</div>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    @* Şirket ID Kontrol Alanı (Debug için) *@
    <div class="alert alert-light border mb-3">
        <i class="fas fa-building me-2"></i>Şirket ID: <strong>@Model.CompanyId</strong>
        <input type="hidden" asp-for="CompanyId" />
    </div>


    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-4" style="border-radius: 15px;">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Ürün Adı</label>
                    <input asp-for="Name" class="form-control form-control-lg">
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Marka</label>
                        <select asp-for="BrandId" class="form-select">
                            @foreach (var bra in allBrands)
                            {
                                <option value="@bra.Id">@bra.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Kategori</label>
                        <select asp-for="CategoryId" class="form-select">
                            @foreach (var cat in allCategories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 p-4 mb-4" style="border-radius: 15px;">
                <h5 class="fw-bold mb-3">Fiyat & Stok</h5>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label small text-muted">Birim Fiyat (₺)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Stock" class="form-label small text-muted">Stok Miktarı</label>
                    <input asp-for="Stock" type="number" class="form-control">
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg"
                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
                    <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                </button>
                <a asp-action="Index" class="btn btn-light btn-lg text-muted">Vazgeç</a>
            </div>
        </div>
    </div>
</form>