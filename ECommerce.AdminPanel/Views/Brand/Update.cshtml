@model ECommerce.AdminPanel.Models.Brands.UpdateBrandViewModel
@{
    ViewData["Title"] = "Marka Düzenle";
}

<div class="page-header mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Markalar</a></li>
            <li class="breadcrumb-item active">Düzenle</li>
        </ol>
    </nav>
    <h1 class="page-title">Markayı Düzenle</h1>
    <p class="text-muted"><strong>@Model.Name</strong> markasının bilgilerini güncelliyorsunuz.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 p-4" style="border-radius: 15px;">
            <form asp-action="Update" method="post">
                @* Önemli: Id ve CompanyId'yi mutlaka gizli (hidden) olarak taşıyoruz *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CompanyId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="LogoUrl" class="form-label fw-bold"></label>
                    <textarea asp-for="LogoUrl" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="LogoUrl" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-light px-4">İptal</a>
                    <button type="submit" class="btn btn-primary px-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
                        <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}