@model IEnumerable<ECommerce.Application.DTOs.Customer.CustomerDto>

<div class="page-header d-flex justify-content-between mb-4">
    <h1 class="page-title">Müşteri Yönetimi</h1>
    <span class="badge bg-info p-2">Toplam @Model.Count() Müşteri</span>
</div>

<div class="card shadow-sm border-0" style="border-radius: 15px;">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Ad Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Şehir</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3 text-center" style="width:40px">
                                    @customer.FirstName[0]@customer.LastName[0]
                                </div>
                                <strong>@customer.FirstName @customer.LastName</strong>
                            </div>
                        </td>
                        <td>@customer.Email</td>
                        <td>@customer.PhoneNumber</td>
                        <td><span class="badge bg-secondary">@customer.City</span></td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-eye"></i> Sipariş Geçmişi
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>